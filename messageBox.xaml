<UserControl x:Class="Mobideskv2.messageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid Background="#FFF9F9F9">
        <StackPanel VerticalAlignment="Center" Margin="5,5,5,5">
        <TextBlock Text="Textblock" Margin="5,5,5,5" VerticalAlignment="Center" Foreground="#FF343333"/>
        <Button Content="Okay" Padding="5,5,5,5" Width="60" HorizontalAlignment="Right" BorderBrush="{x:Null}" Background="#FF20A0D0" Foreground="#FFECECEC"  />
        </StackPanel>
    </Grid>
</UserControl>
