<Window x:Class="Mobideskv2.notifyTray"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="notifyTray" Height="100" Width="200" WindowStyle="None" Background="{x:Null}" Foreground="{x:Null}" AllowsTransparency="True">
    <Border BorderBrush="#FF15A5F7" BorderThickness="1" Background="White" Margin="5,5,5,0" OpacityMask="#FFEEEEEE" Opacity="0.95">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#FF15A5F7"/>
        </Border.Effect>
        <Grid>
            <StackPanel>
                <Button Content="x" Width="20" Height="20" HorizontalAlignment="Right" BorderBrush="{x:Null}"/>
                <TextBlock  TextWrapping="Wrap" Text="TextBlock" FontFamily="Roboto Light" Foreground="#FF343333" Margin="5,10,5,5"/>
            </StackPanel>
        </Grid>

    </Border>
</Window>
